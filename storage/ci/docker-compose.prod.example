version: "3.5"

services:

  #php server
  kanvasadminapi:
    image: mctekk/phalconphp:7.4
    volumes:
      - .:/app
    tty: true
    ports:
      - "9020:9000"
    networks:
      - local-network
    deploy:
      restart_policy:
        condition: on-failure

  nginx:
    image: nginx:latest
    ports:
        - "8089:80"
    links:
        - kanvasadminapi
    volumes:
        - .:/app
        - ./storage/ci/nginx.conf:/etc/nginx/conf.d/default.conf
    networks:
      - local-network
      - public-network
    deploy:
      restart_policy:
        condition: on-failure

networks:
  local-network:
  public-network: